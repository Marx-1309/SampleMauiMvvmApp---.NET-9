<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMauiMvvmApp.Views.NotesDetailsPage"
             Title="📝 Insert or Update Note"
             BackgroundColor="#f5f5f5">

    <Grid RowDefinitions="*,Auto"
          Padding="20">

        <!-- Content Area -->
        <ScrollView Grid.Row="0">
            <StackLayout Spacing="20">

                <!-- Title Field -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Title"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333" />
                    <Frame CornerRadius="8" Padding="10" HasShadow="False" BackgroundColor="White">
                        <Entry Text="{Binding NoteDetails.NoteTitle}"
                               Placeholder="Enter note title"
                               BackgroundColor="Transparent"
                               TextColor="Black"
                               FontSize="14" />
                    </Frame>
                </VerticalStackLayout>

                <!-- Note Field -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="My Note"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333" />
                    <Frame CornerRadius="8" Padding="10" HasShadow="False" BackgroundColor="White">
                        <Editor Text="{Binding NoteDetails.NoteContent}"
                                Placeholder="Type something here..."
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                FontSize="14"
                                HeightRequest="200" />
                    </Frame>
                </VerticalStackLayout>

                <!-- Date Display -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Date"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333" />
                    <Label Text="{Binding NoteDetails.Date}"
                           FontSize="14"
                           TextColor="#888" />
                </VerticalStackLayout>
            </StackLayout>
        </ScrollView>

        <!-- Save Button -->
        <Button Grid.Row="1"
                Text="💾 Save Note"
                FontAttributes="Bold"
                FontSize="16"
                BackgroundColor="#ff8800"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                Command="{Binding UpsertNoteCommand}"
                Margin="0,20,0,0" />
    </Grid>
</ContentPage>