<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMauiMvvmApp.Views.LoadingPage"
             Shell.NavBarIsVisible="False"
             Title="LoadingPage"
             Shell.FlyoutBehavior="Disabled">
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="*,Auto">
        <Image Source="loading_wallpaper.jpg" Aspect="AspectFill" />
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Center">
            <ActivityIndicator
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="CenterAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            Color="{StaticResource Primary}"
            VerticalOptions="Center" />
            <Label TextColor="Blue" FontSize="Subtitle"  HorizontalOptions="CenterAndExpand"  Text="Please Wait..."></Label>
        </VerticalStackLayout>
    </Grid>
</ContentPage>