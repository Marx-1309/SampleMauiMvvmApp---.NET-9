<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="SampleMauiMvvmApp.Views.SynchronizationPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"></BackButtonBehavior>
    </Shell.BackButtonBehavior>
    <Grid
       ColumnDefinitions="*"
       RowDefinitions="*,Auto">
        <skia:SKLottieView
                Source="sync_animation.json"
                RepeatCount="-1"
                SemanticProperties.Description="Be patient while we load your data!"
                HeightRequest="350"
                WidthRequest="350"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>